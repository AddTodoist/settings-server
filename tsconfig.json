{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "module": "esnext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "inlineSourceMap": true
  },
  "ts-node": {
    "esm": true
  },
  "lib": [
    "esnext"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
